<Window x:Class="Exo_3.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Exo_3"
        mc:Ignorable="d"
        Title="Exo 3" Height="450" Width="800">
    <Grid>
        <StackPanel Margin="10">
            <TextBox x:Name="txtValue" Margin="0,0,524,0" Height="37" />
            <WrapPanel Margin="0,10" Height="36">
                <TextBlock Text="Bonjour " />
                <TextBlock Text="{Binding Text, ElementName=txtValue}" />
            </WrapPanel>
        </StackPanel>
    </Grid>
</Window>
