<Window x:Class="agenda.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:agenda"
        mc:Ignorable="d"
        Title="Agenda LaManu" Height="600" Width="1000">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0*"/>
            <ColumnDefinition Width="16*"/>
            <ColumnDefinition Width="0*"/>
            <ColumnDefinition Width="0*"/>
            <ColumnDefinition Width="17*"/>
        </Grid.ColumnDefinitions>
        <Menu  Height="40" VerticalAlignment="Top" Grid.ColumnSpan="5" Background="#FFE06161">
            <MenuItem Header="Clients" FontSize="18" FontWeight="Bold">
                <MenuItem Header="Ajouter un client" Click="addCustomer_Click"/>
                <MenuItem Header="Liste des clients"/>
            </MenuItem>
        </Menu>
        <Frame x:Name="Main" Grid.ColumnSpan="5" Content="" HorizontalAlignment="Left" Height="530" Margin="0,40,0,0" VerticalAlignment="Top" Width="992" RenderTransformOrigin="0.5,0.5">

        </Frame>

    </Grid>
</Window>
